	public String otro(String cadena){
		
		char elementos[]=cadena.toCharArray();
		
		for(int i=0;i<cadena.length();i++){
			if(Character.isLetter(elementos[i])){
				continue;
			}else{
				listaNumeros.add(elementos[i]);
			}
			
		}
		System.out.println(listaNumeros);
		return cadena;
	}
}