package TiposdeOrdenamientos;

public class OrdBurbuja {
	
	private static final int LIMITE = 0;
	public static void burbuja(int[]matrix){  
        int temp=0;  
        for(int i=1;i < matrix.length;i++){  
            for (int j=0 ; j < matrix.length- 1; j++){  
                if (matrix[j] > matrix[j+1]){  
                    temp = matrix[j];  
                    matrix[j] = matrix[j+1];  
                    matrix[j+1] = temp;  
                }
            }
            System.out.println(temp);
        } 
    }
	public static void bubble(){/////////////////////////////////////////77
		int i,j;
		int[] vector={1,2,3,4,7,9,4,2,6,6};
		int temp=0;
		for (i=1; i<LIMITE; i++){
			for( j=0 ; j<LIMITE - 1; j++){
			if (vector[j] > vector[j+1])
			temp = vector[j];
			vector[j] = vector[j+1];
			vector[j+1] = temp;
			}
		}
	}
	public int Bubblesort(int matriz[]){/////////////////////////////////////////7
		int buffer=0;
		int i,j;
		for(i = 0; i < matriz.length; i++){
			for(j = 0; j < i; j++){
				if(matriz[i] < matriz[j]){
					buffer = matriz[j];
					matriz[j] = matriz[i];
					matriz[i] = buffer;
					}
				}
			}
		return buffer;
		}
}
