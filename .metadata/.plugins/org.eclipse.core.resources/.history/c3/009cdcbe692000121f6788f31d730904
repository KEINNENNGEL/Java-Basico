	    public  String reverseIt(String arreglo) {
	    	char elementos[]=arreglo.toCharArray();
	        int i, len = arreglo.length();
	        StringBuffer dest = new StringBuffer(len);

	        for (i = (len - 1); i >= 0; i--) {
	            dest.append(arreglo.charAt(i));
	        }
	        return dest.toString();
	    }
	
